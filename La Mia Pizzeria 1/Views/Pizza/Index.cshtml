<!-- Se il controller passerà a questa vista dei dati (quindi un modello di dato) dovrò
    specificarlo nella vista con la direttiva Razor (csharp) @@model
-->

@model List<Pizza>





    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mt-3 mb-3">Le nostre pizze</h1>
                </div>

                <a class="btn btn-primary"
               href="@Url.Action("Create", "Pizza")">
                    Nuovo articolo
                </a>

                <table class="table post-list-table">
                    <thead>
                        <tr>
                           
                            <th>Immagine</th>
                            <th>Titolo</th>
                            <th>Descrizione</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                              
                                <!-- questo è un esempio con url immagine esterna alla webapp attuale -->
                                <td class="image"><img class="post-list-image" src="@pizza.Image"></td>
                                <td class="title">@pizza.Title</td>
                                <td class="description">@pizza.Description</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Post", new { id = pizza.Id } )" role="button">Dettagli</a>
                                </td>
                            </tr>
                        }


                      
                        

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
